		<mx:VBox label="Algorithm" 
			width="250" 
			height="300"
			paddingLeft="20">
		
			<mx:RadioButtonGroup id="algorithm" change="update()"/>
			<mx:RadioButton groupName="algorithm" 
				id="circleAlgorithm"
				label="Circle" 
				width="150"
				selected="true"
				change="update()"
				value="circle" />
			<mx:VBox paddingLeft="15" includeInLayout="{circleAlgorithm.selected}" visible="{circleAlgorithm.selected}" >
